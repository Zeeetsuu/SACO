<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSecurity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <TextView
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/security"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"
            app:drawableStartCompat="@drawable/backbutton" />

        <!-- Email Section -->
        <TextView
            android:id="@+id/securityText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mr_guest_dummymail_com"
            android:background="#B2E0F3"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:backgroundTint="#7271EDFF"
            android:layout_marginTop="4dp"/>

        <!-- Other Section -->
        <TextView
            android:id="@+id/securityText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/securityTwoStepVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7271EDFF"
            android:text="@string/two_step_verification"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/securityChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:backgroundTint="#7271EDFF"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/securityDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7271EDFF"
            android:text="@string/delete_account"
            android:textColor="#B71C1C"
            android:textStyle="bold"
            app:cornerRadius="10dp" />
    </LinearLayout>

</FrameLayout>