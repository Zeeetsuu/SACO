<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".metricScreen">

    <LinearLayout
        android:id="@+id/metricLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/metricBack"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="16dp"
            android:text="@string/metric"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/backbutton" />

        <Button
            android:id="@+id/metricCelcius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7271EDFF"
            android:text="@string/celsius"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/metricFarenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7271EDFF"
            android:text="@string/farenheit"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/metricKelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7271EDFF"
            android:text="@string/kelvin"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:cornerRadius="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>